<form class="form-horizontal">
    <div class="form-group">
        {{input value=title class="form-control"}}

    </div>
    <div class="form-group">
        {{textarea value=description class="form-control"}}

    </div>

    <fieldset class="actions">
        <input type="submit" value='Create Task' class="btn btn-success" {{ action 'createTask'}}/>
        <button class="btn btn-danger" {{action cancel}}>Cancel</button>
    </fieldset>
</form>